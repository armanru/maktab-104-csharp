@using Microsoft.AspNetCore.Mvc.TagHelpers
@model S23_AspNetCore_RazorViewEngine.Models.Entities.Product

<h2 class="mb-5">
    مشاهده جزئیات
    @Model.Name
</h2>

<div class="border border-1 p-5">
    <div class="mb-3">
        <label class="form-label" asp-for="Id"></label>
        <input class="form-control" asp-for="Id" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Brand"></label>
        <input class="form-control" asp-for="Brand" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Price"></label>
        <input class="form-control" asp-for="Price" readonly />
    </div>

    <a class="btn btn-outline-secondary"
       asp-controller="Product" asp-action="Index">بازگشت</a>
</div>