@model List<S25_AspNetCore_ModelValidation.Models.Entities.Product>
@{
    Layout = "_AdminLayout";
}

<h1>لیست محصولات</h1>
<a class="btn-sm btn-success" asp-controller="Product" asp-action="Create">محصول جدید</a>
<partial name="_WelcomeCardPartial" model="ViewBag.TarikheEmrooz.ToString()" />
<table class="table table-hover table-bordered table-responsive w-100">
    <tr>
        <td>شناسه</td>
        <td>عنوان</td>
        <td>برند</td>
        <td>قیمت</td>
        <td>عملیات</td>
    </tr>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.Id</td>
            <td>@product.Name</td>
            <td>@product.Brand</td>
            <td>@product.Price</td>

            <td><a class="btn-sm btn-info" asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">مشاهده جزئیات</a></td>

            <td><a class="btn-sm btn-warning" asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id">ویرایش</a></td>

            <td>
                <form asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" method="post">
                    <input type="submit" class="btn-sm btn-danger" value="حذف">
                </form>
                
            </td>
        </tr>
    }
</table>